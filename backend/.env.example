# backend/.env
DSN: "user:password@tcp(host:3306)/dbname?parseTime=true"
JWT_SECRET: "your_secure_secret"
JWT_EXPIRY: "5m"
CSRF_SECRET: "your_secure_secret"
LOG_TYPE: "file" # file or console
PORT: "6033"
CERT_FILE: "/path/to/your/cert.pem"
KEY_FILE: "/path/to/your/privkey.pem"
EMAIL: "info@mail.com"
EMAIL_PASSWORD: 'password'
EMAIL_HOST: "host.com"
EMAIL_PORT: "587"

# Rate limiting configuration
RATE_LIMIT_DEFAULT_MAX: "60" # Maximum number of requests per default window
RATE_LIMIT_DEFAULT_WINDOW: "1m" # Default time window for rate limiting (e.g., 1m, 5m, 1h)
RATE_LIMIT_AUTH_MAX: "5" # Maximum number of auth requests per window
RATE_LIMIT_AUTH_WINDOW: "1m" # Time window for auth endpoints
RATE_LIMIT_ADMIN_MAX: "20" # Maximum number of admin requests per window
RATE_LIMIT_ADMIN_WINDOW: "1m" # Time window for admin endpoints
RATE_LIMIT_CLEANUP_INTERVAL: "5m" # Interval for cleaning up old request records

